<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="image">
	
	<!-- 시퀀스 번호 가져오기 -->
	<select id="sequence">
		select image_seq.nextval from dual
	</select>
	
	<!-- 등록하기 -->
	<insert id="regImage" parameterType="imageDto">
		insert into image values(
			#{imageNo}, #{uploadName}, #{saveName},
			#{fileSize}, #{fileType}
		)
	</insert>
	
	<!-- 삭제하기 -->
	<delete id="deleteImage">
		delete image where image_no = #{imageNo}
	</delete>
	
	<!-- 단일조회 -->
	<select id="get" parameterType="int" resultType="imageDTO">
		select * from image where image_no = #{imageNo}
	</select>
</mapper>