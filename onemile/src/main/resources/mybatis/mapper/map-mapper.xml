<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="map">
	
	<!-- 시퀀스 번호 가져오기 -->
	<select id="sequence">
		select map_seq.nextval from dual
	</select>
	
	<!-- 등록하기 -->
	<insert id="insert" parameterType="mapDto">
		insert into map value(
			#{mapNo}, #{lat}, #{lon}, #{detailAddress}
		)
	</insert>
	
	<!-- 수정하기 -->
	<update id="change" parameterType="mapDto">
		update map
		set
			lat = #{lat},
			lon = #{lon},
			detail_address = #{detailAddress}
		where
			map_no = #{detailAddress}
	</update>
	
	<!-- 단일조회 -->
	<select id="get" parameterType="int" resultType="mapDTO">
		select * from map where map_no = #{mapNo}
	</select>
</mapper>