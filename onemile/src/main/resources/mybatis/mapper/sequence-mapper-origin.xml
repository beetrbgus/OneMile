<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="seq">

	<!-- 시퀀스 가져오기 -->
	<select id="getNext" parameterType="String" resultType="int">
		select ${seq_name}.nextval from dual
	</select>
		<!-- 시퀀스 가져오기 -->
	<select id="getNow" parameterType="String" resultType="int">
		select ${seq_name}.currval from dual
	</select>
	
	<!-- 시퀀스 가져오기 -->
	<select id="getNext2" parameterType="String" resultType="int">
		select seq_no from seq where  seq_name=#{seq_name}
	</select>
	<!-- 시퀀스 증가하기 -->
	<update id="getNow2" parameterType="Map">
		update seq set seq_no =${seq_id}.nextval where seq_name=#{seq_name}
	</update>
	
</mapper>